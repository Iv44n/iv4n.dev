---
interface Props {
  title: string;
  description: string;
  imageUrl: string;
}

const { title, description, imageUrl } = Astro.props
---

<a href='#' class='flex flex-col gap-2 mb-4'>
  <img
    src={imageUrl}
    alt={title}
    class='w-full object-cover opacity-50 rounded-sm hover:opacity-100 transition-all duration-300'
  />
  <div>
    <h3 class='font-medium'>{title.toUpperCase()}</h3>
    <p class='text-xs text-neutral-400'>{description.toUpperCase()}</p>
  </div>
</a>
