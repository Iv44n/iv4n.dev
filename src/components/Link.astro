---
import type { HTMLAttributes } from "astro/types";

type HTMLLinkProps = HTMLAttributes<"a">;

interface Props extends HTMLLinkProps {
    href: string;
    span?: boolean;
    button?: boolean;
    size?: "xs" | "sm" | "md" | "lg" | "xl";
    color?: "blue" | "orange" | "hotpink" | "cyan";
}

const {
    href,
    span = false,
    button,
    size = "md",
    color = "blue",
    ...attrs
} = Astro.props;

const isActive = href === Astro.url.pathname;

const linkClass = `${isActive ? "active" : ""} ${button ? "button-link" : ""} ${button && size} ${button && color}`;
---

<a href={href} {...attrs} class={linkClass}>
    {span && <span class="blue-text">#</span>}<slot />
</a>

<style>
    a {
        color: var(--text);
    }

    a span {
        margin-right: 3px;
    }

    .active {
        color: var(--site-color-600);
        position: relative;
    }

    .active span {
        color: var(--text);
    }

    .active::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 1px;
        margin-top: 1.5px;
        background: var(--site-color-600);
        display: block;
        border-radius: 100px;
        animation: animate 0.3s linear forwards;
    }

    @keyframes animate {
        0% {
            width: 0;
        }
        100% {
            width: 100%;
        }
    }

    .button-link {
        display: flex;
        align-items: center;
        border-radius: 4px;
        border: 1px solid;
        max-width: fit-content;
        justify-content: center;
        gap: 0.5rem;
    }

    .blue {
        border-color: var(--site-color-600);
    }

    .orange {
        color: var(--color-orange);
        border-color: var(--color-orange);
    }

    .cyan {
        color: var(--color-cyan);
        border-color: var(--color-cyan);
    }

    .xs {
        font-size: 12px;
        padding: 4px 8px;
    }

    .sm {
        font-size: 14px;
        padding: 6px 12px;
    }

    .md {
        font-size: 16px;
        padding: 8px 16px;
    }

    .lg {
        font-size: 18px;
        padding: 10px 20px;
    }

    .xl {
        font-size: 20px;
        padding: 12px 24px;
    }
</style>
